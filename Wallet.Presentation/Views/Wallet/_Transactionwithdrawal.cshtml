@using Wallet.Shared.Contract.ViewModels.TransactionTypeVm
@model List<TransactionTypeForWalletVm>
<div class="container mt-3">
    <div class="card p-4 shadow">
        <!-- Price -->
        <div class="mb-3">
            <label class="form-label">مبلغ برداشت</label>
            <input type="number" id="price" class="form-control" placeholder="مبلغ را وارد کنید" />
        </div>

        <!--  select Code -->
        <div class="mb-3">
            <label class="form-label">نوع تراکنش</label>
            <!-- disabled: کاربر نمی‌تواند تغییر دهد -->
            <select id="Code" class="form-select" disabled>
                <!-- value="2": کد برداشت -->
                <!-- selected: به صورت خودکار انتخاب شده -->
                <!-- متن داخل تگ: برداشت -->
                <option value="2" selected>برداشت</option>
            </select>
        </div>

        <!--  wallet ID -->
        <input type="hidden" id="walletIdHidden" value="@ViewBag.WIdd" />

        <div class="text-center mt-4">
            <button type="button" class="btn btn-success px-5" onclick="sharjSubmitfunc()">
                ثبت برداشت
            </button>
        </div>
    </div>
</div>

<script>
    function sharjSubmitfunc() {
        debugger;
        var walletId = $("#walletIdHidden").val();
        var amount = $("#price").val();

        // چون دراپ‌داون دیزابل (غیرفعال) است، مقدار آن را به صورت دستی روی 2 تنظیم می‌کنیم
        var transactionTypeCode = "2";

        if (!amount || amount <= 0) {
            Swal.fire({
                icon: 'warning',
                title: 'توجه',
                text: 'لطفاً مبلغ برداشت را وارد کنید!'
            });
            return;
        }

        $.ajax({
            cache: false,
            url: "/Wallet/Transactionwithdrawal",
            type: "POST",
            data: {
                WalletId: walletId,
                Amount: amount,
                TransactionTypeCode: transactionTypeCode
            },
            success: function () {
                Swal.fire({
                    icon: 'success',
                    title: 'موفق!',
                    text: 'برداشت با موفقیت انجام شد'
                }).then(() => {
                    var modalEl = document.getElementById('my_md_modal');
                    var modalInstance = bootstrap.Modal.getInstance(modalEl);
                    $('#my_md_modal .modal-body').html('');
                    modalInstance.hide();
                });
            },
            error: function () {
                Swal.fire({
                    icon: 'error',
                    title: 'خطا',
                    text: 'مشکلی در انجام عملیات پیش آمد'
                });
            }
        });
    }
</script>