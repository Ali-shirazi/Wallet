@model Wallet.Shared.Contract.ViewModels.WalletVm.WalletVm

@{
    Layout = null;
}
<!-- فرم ویرایش -->
<form id="updateWallet" class="w-100">
    <input type="hidden" asp-for="Id" />
    <!-- ردیف اول -->
    <div class="row mb-3">
        <div class="col-md-3">
            <label for="Name" class="form-label">نام کیف پول</label>
            <input type="text" class="form-control shadow rounded-2 text-right" asp-for="Name">
        </div>
        <div class="col-md-3">
            <label for="SubSysId" class="form-label">نام شرکت</label>
            <input type="text" class="form-control shadow rounded-2 text-right" asp-for="SubSysId">
        </div>

    </div>

    <!-- ردیف دوم -->
    <div class="row mb-3">
        <div class="col-md-3">
            <label for="Balance" class="form-label">موجودی</label>
            <input type="number" class="form-control shadow rounded-2 text-right" asp-for="Balance">
        </div>
        <div class="col-md-3">
            <label for="SaveDate" class="form-label">تاریخ</label>
            <input type="text" class="form-control shadow rounded-2 text-right" asp-for="SaveDate">
        </div>
    </div>

    <!-- دکمه ذخیره -->
    <div class="text-center mt-3">
        <button type="button" onclick="updateWallet()" class="btn btn-success w-25">ذخیره تغییرات</button>
    </div>
</form>
<script>

    var originalFormData = $('#updateWallet').serialize();

     function updateWallet() {
         // دریافت اطلاعات فعلی فرم در لحظه کلیک
         var currentFormData = $('#updateWallet').serialize();

         $.ajax({
             type: "POST",
             url: "/Wallet/Update",
             data: currentFormData, // اکنون این متغیر تعریف شده است
             success: function (data) {
                 // Handle successful update
                 if (data) {
                     swal.fire({
                         title:'موفق!',
                         html:  'اطلاعات با موفقیت ویرایش شد.',
                         icon:'success',
                         confirmButtonText:'تایید'
                     }).then(function () {
                         window.location.reload();
                     });
                 } else {
                     swal.fire({
                         title: 'خطا!',
                         html: 'ویرایش انجام نشد.',
                         icon: 'error',
                         confirmButtonText: 'تایید'
                     }).then(function () {
                         window.location.reload();
                     });
                 }
             },
             error: function (xhr, ajaxOptions, thrownError) {
                 swal.fire({
                    title: 'خطا!',
                         html: 'انجام عملیات با خطا مواجه شد.',
                         icon: 'error',
                         confirmButtonText: 'تایید'
                 });
             }
         });
     }
</script>


