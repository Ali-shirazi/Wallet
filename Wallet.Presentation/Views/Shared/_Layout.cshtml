<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Wallet</title>
    <script type="importmap"></script>

    <!-- استایل‌های بوت‌استرپ -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- استایل‌های سایت -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- استایل SweetAlert2 -->
    <link href="~/sweetalert2/sweetalert2.min.css" rel="stylesheet" />

    <!-- استایل DataTables (CDN برای اطمینان از لود شدن) -->
    <link href="https://cdn.datatables.net/2.1.8/css/dataTables.dataTables.css" rel="stylesheet" />

    <!-- آیکون‌های بوت‌استرپ -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- اسکریپت‌ها -->
    <!-- ۱. جی‌کوئری -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <!-- ۲. بوت‌استرپ -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- ۳. دیتا تیبلز (نسخه CDN) -->
    <script src="https://cdn.datatables.net/2.1.8/js/dataTables.min.js"></script>

    <!-- ۴. SweetAlert2 -->
    <link href="~/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    <script src="~/sweetalert2/sweetalert2.min.js"></script>
    <!-- ۵. مومنت جی‌اس -->
    <script src="~/js/jalalimoment.js"></script>

    <!-- ۶. فونت آیسام (حذف شد چون خطای 404 می‌داد) -->
    <!-- ۷. اسکریپت اختصاصی سایت -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Modal XL -->
    <div class="modal fade" id="my_xl_modal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabelXL" aria-hidden="true">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5 text-center w-100" id="staticBackdropLabelXL"></h1>
                    <button type="button" id="xl_modal_dismiss" class="btn-close bg-danger" style="margin-left: auto;" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Dynamic content -->
                </div>
            </div>
        </div>
    </div>

    <!-- Modal LG -->
    <div class="modal fade" id="my_lg_modal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabelLG" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5 text-center w-100" id="staticBackdropLabelLG"></h1>
                    <button type="button" id="lg_modal_dismiss" class="btn-close bg-danger" style="margin-left: auto;" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Dynamic content -->
                </div>
            </div>
        </div>
    </div>

    <!-- Modal MD -->
    <div class="modal fade" id="my_md_modal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabelMD" aria-hidden="true">
        <div class="modal-dialog modal-md">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5 text-center w-100" id="staticBackdropLabelMD"></h1>
                    <button type="button" id="md_modal_dismiss" class="btn-close bg-danger" style="margin-left: auto;" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Dynamic content -->
                </div>
            </div>
        </div>
    </div>

    <!-- Modal SM -->
    <div class="modal fade" id="my_sm_modal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabelSM" aria-hidden="true">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5 text-center w-100" id="staticBackdropLabelSM"></h1>
                    <button type="button" id="sm_modal_dismiss" class="btn-close bg-danger" style="margin-left: auto;" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Dynamic content -->
                </div>
            </div>
        </div>
    </div>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>