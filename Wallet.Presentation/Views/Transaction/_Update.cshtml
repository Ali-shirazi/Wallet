@model Wallet.Shared.Contract.ViewModels.TransactionVm.TransactionVm

@{
    Layout = null;
}
<!-- فرم ویرایش -->
<form id="updateTransaction" class="w-100">

    <!-- اضافه کردن فیلد مخفی برای Id -->
    <input type="hidden" asp-for="Id" />

    <div class="row mb-3">
        <div class="col-md-3">
            <label for="Name" class="form-label">نام تراکنش</label>
            <input type="text" class="form-control shadow rounded-2 text-right" asp-for="Name">
        </div>
        <div class="col-md-3">
            <label for="SubSysId" class="form-label">نام کیف پول</label>
            <input type="text" class="form-control shadow rounded-2 text-right" asp-for="WalletId">
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-md-3">
            <label for="Name" class="form-label">نوع تراکنش</label>
            <input type="text" class="form-control shadow rounded-2 text-right" asp-for="TransactionTypeId">
        </div>
        <div class="col-md-3">
            <label for="SubSysId" class="form-label">تاریخ</label>
            <input type="text" class="form-control shadow rounded-2 text-right" asp-for="SaveDate">
        </div>
    </div>

    <!-- دکمه ذخیره -->
    <div class="text-center mt-3">
        <button type="button" onclick="updateTransaction()" class="btn btn-success w-25">ذخیره تغییرات</button>
    </div>
</form>
<script>
       // ذخیره فرم اولیه برای مقایسه (اختیاری)
    var originalFormData = $('#updateTransaction').serialize();

    function updateTransaction() {
        // دریافت اطلاعات فعلی فرم در لحظه کلیک
        var currentFormData = $('#updateTransaction').serialize();

        $.ajax({
            type: "POST",
            url: "/Transaction/Update",
            data: currentFormData, // اکنون این متغیر تعریف شده است
            success: function (response) {
                // Handle successful update
                if (Number.parseInt( response.state) > 0 && Number.parseInt( response.state)<1000) {
                    swal.fire({
                        title:'موفق!',
                        html: response.message,
                        icon:'success',
                        confirmButtonText:'تایید'
                    }).then(function () {
                        window.location.reload();
                    });
                } else {
                    swal.fire({
                        title: 'خطا!',
                        html: response.message,
                        icon: 'error',
                        confirmButtonText: 'تایید'
                    }).then(function () {
                        window.location.reload();
                    });
                }
            },
            error: function (xhr, ajaxOptions, thrownError) {
                swal.fire({
                   title: 'خطا!',
                        html: 'انجام عملیات با خطا مواجه شد.',
                        icon: 'error',
                        confirmButtonText: 'تایید'
                });
            }
        });
    }
</script>
   